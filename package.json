{
  "name": "Monokai Ristretto (dev)",
  "version": "0.7",
  "main": "dist/main.css",
  "repository": {
    "type": "git",
    "url": "git://github.com:marcolaux/sn-monokai-ristretto.git"
  },
  "dependencies": {
    "chokidar-cli": "^3.0.0",
    "node-sass": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^11.0.0"
  },
  "scripts": {
    "build:style": "node-sass src/main.scss dist/main.css",
    "build:deploy": "npm run deploy",
    "watch": "CHOKIDAR_USEPOLLING=true chokidar src/*.scss -c \"npm run build:style && npm run deploy\" --initial",
    "deploy": "./deploy.sh"
  }
}
